        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/locked" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="616dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/locked" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="LESSON 1"
        android:textSize="18dp"
        android:fontFamily="@font/superLegend"
        app:layout_constraintEnd_toEndOf="@+id/lesson1btn"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/lesson1btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/superLegend"
        android:text="LESSON 2"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/lesson2"
        app:layout_constraintHorizontal_bias="0.494"
