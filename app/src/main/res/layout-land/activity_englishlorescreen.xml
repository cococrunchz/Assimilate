<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/englishscreenbg"
    tools:context=".englishlorescreen">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="613dp"
        android:layout_height="143dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/superLegend"
        android:text="This world has been run over by a slime kind called “Slimegons”. With the power and knowledge of the English subject, defeat the Slimegons and gain intelligence. Put a stop to their evil deeds and bring peace to the kingdoms and this world once more."
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/startbtn"
        android:layout_width="185dp"
        android:layout_height="184dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/levelbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/superLegend"
        android:text="Start"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/startbtn"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/startbtn"
        app:layout_constraintTop_toTopOf="@+id/startbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>